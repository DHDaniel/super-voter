<!doctype html>

<html lang="en">

<head>

  <title>Voter - Log In</title>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Latest compiled and minified Bootstrap CSS. Only contains grid system and containers -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/login.css" type="text/css" />

  {{#if styles}}
  <!-- Custom stylesheets -->
  {{#each styles}}
  <link rel="stylesheet" href="{{this}}" type="text/css" />
  {{/each}}

  {{/if}}

</head>

<body>


<div id="login-wrapper">

    <div id="login">
      <img src="/images/logo-black.svg" />
      {{#if error}}
      <p>
        {{error}}
      </p>
      {{/if}}
      <form method="post">
        <label for="username">Username:</label>
        <input type="text" name="username" placeholder="john_doe22" />
        <label for="password">Password:</label>
        <input type="password" name="password" placeholder="**********"/>
        <button class="btn btn-lg btn-success" type="submit" formaction="/login">Log In</button>
        <span>or</span>
        <button class="btn btn-lg btn-primary" type="submit" formaction="/signup">Sign Up</button>
      </form>
    </div>
</div>

{{#if scripts}}

<!-- custom scripts -->
{{#each scripts}}
<script src="{{this}}" type="text/javascript"></script>
{{/each}}
{{/if}}

</body>
</html>
